{
  "name": "react-mst-apollo-styled-tailwind",
  "description": "Starter kit using create-react-app",
  "author": "Polysharp <polysharp.git@gmail.com>",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "run-p watch:tailwind start:react",
    "watch:tailwind": "postcss -w src/styles/tailwind.css -o src/styles/tailwind.generated.css",
    "start:react": "react-scripts start",
    "prebuild": "npm run build:tailwind",
    "build:tailwind": "postcss src/styles/tailwind.css -o src/styles/tailwind.generated.css",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "lint": "eslint ."
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.5",
    "apollo-boost": "^0.4.8",
    "graphql": "^15.0.0",
    "i18next": "^19.4.4",
    "i18next-browser-languagedetector": "^4.1.1",
    "mobx": "^5.15.4",
    "mobx-devtools-mst": "^0.9.22",
    "mobx-react": "^6.2.2",
    "mobx-state-tree": "^3.16.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-i18next": "^11.4.0",
    "react-scripts": "3.4.1",
    "styled-components": "^5.1.0",
    "tailwind.macro": "^1.0.0-alpha.10"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "@fullhuman/postcss-purgecss": "^2.2.0",
    "commitlint": "^8.3.5",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^4.2.5",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "prettier": "^2.0.5",
    "tailwindcss": "^1.4.6"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "./node_modules/commitlint/cli.js -E HUSKY_GIT_PARAMS"
    }
  }
}
